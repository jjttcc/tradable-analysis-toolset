<% if ! object.nil? && object.errors.any? %>
  <div id="error_explanation">
    <h3>
      Update failed due to <%= pluralize(object.errors.count, 'error') %>.
    </h3>
    <p>The following problems occurred:</p>
    <ul>
    <% object.errors.full_messages.each do |m| %>
      <li><%= m %></li>
    <% end %>
    </ul>
  </div>
<% end %>
