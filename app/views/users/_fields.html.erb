<%= render 'shared/error_messages', :object => object %>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user) do |f| %>
      <%= f.label :email_addr, "Email address" %><br/>
      <%= f.text_field :email_addr, class: 'form-control' %><br/>
      <%= f.label :password %><br/>
      <%= f.password_field :password, class: 'form-control' %><br/>
      <%= f.label :password_confirmation, "Confirm password" %><br/>
      <%= f.password_field :password_confirmation, class: 'form-control' %><br/>
      <%= f.submit @submit_msg, class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
