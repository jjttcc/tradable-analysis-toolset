<h1>Sign in</h1>
<%= form_for(:session, :url => sessions_path) do |f| %>
  <div class="field">
    <%= f.label :email_addr, "Email address" %><br/>
    <%= f.text_field :email_addr %><br/>
  </div>
  <div class="field">
    <%= f.label :password %><br/>
    <%= f.password_field :password %><br/>
  </div>
  <div class="actions">
    <%= f.submit "Submit" %>
  </div>
<% end %>
<p>
New users: <%= link_to "Create new login", signup_path %>
</p>
