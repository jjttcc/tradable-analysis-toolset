<!--
!!!!!REMINDER: symbols and period_types should be stored in the mas_session
!!!!!so that they don't have to be retrieved from the MAS server each time.
-->
<% @mas_client.request_symbols; sym1 = @mas_client.symbols.first
if sym1 != nil then @mas_client.request_period_types(sym1) end %>
      <%= form_for :tradable, url: charts_index_path do |f| %>
        <%= select_tag('symbol',
                       options_from_collection_for_select(@mas_client.symbols,
                         :to_s, :to_s, @symbol))
        %>
        <%= select_tag('period_type', options_from_collection_for_select(
              @mas_client.period_types, :to_s, :to_s, @period_type))
        %>
      <%= f.submit 'View chart' %>
      <% end %>

<script type="text/javascript" src="https://www.google.com/jsapi"></script>
<%= javascript_include_tag "charts" %>
<h1>
  <%= "'#{@name}'" %>
  <%= if ! @symbol.nil? then "(#{@symbol})" end %>
</h1>
