<!DOCTYPE html>
<html>
<head>
  <title><%= title %></title>
  <%= include_gon %>
  <%= csrf_meta_tags %>
  <%= render "layouts/stylesheets" %>
</head>
<body>
<div class="container" id="<%= params[:controller].parameterize %>">
  <%= render "layouts/header" %>
  <section class="round" id="<%= params[:controller].parameterize %>">
    <% flash.each do |key, value| %>
      <div class="flash <%= key %>"><%= value %></div>
    <% end %>
    <%= yield %>
  </section>
  <%= render "layouts/footer" %>
  <%= if Rails.env.development?; debug(params) end %>
</div>
</body>
</html>
