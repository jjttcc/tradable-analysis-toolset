#!/usr/bin/env bash
# vim: expandtab

if type banner >/dev/null 2>&1; then
    :
else
    banner() {
        echo $@|tr [a-z] [A-Z]
    }
fi

opts='-v'
show_stderr=
status=0
if [ "$show_stderr" ]; then
    rake test:all
else
    rake test:all 2>/dev/null
fi
status=$?
if [ "$status" -eq 0 ]; then banner good; else banner fail; fi
exit $status
